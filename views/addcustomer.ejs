              <div class="row">
                <div class="col-md-12">
               
                  <div class="card">
                 
                   <div class="card-body">
                    <h5 class="card-title">Customer List</h5>
                    <p class="card-description">
                     <code>LIst Of Customer</code>
                    </p>
                    <div class="table-responsive pt-3">
                      <table class="table table-striped project-orders-table" >
                        <thead>
                          <tr>
                            <th class="ml-5">#</th>
                            <th>Customer Name</th>
                            <th>Customer Address</th>
                            <th>Customer Phone </th>
                            <th>Account Balance </th>
                            <th>Action </th>
                            <th> ToDo</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% if (account.length >0){ %>
                            <% var i =0; %> 
                         
                          <% account.forEach(function(row){ %>
                            <% i++ ; %>
                         <tr>
                          <td><%= i %></td>
                           <td><%= row.customername %></td>
                           <td><%= row.customeraddress %></td>
                           <td><%= row.customerphone %></td>
                           <td><%= row.intialbalance %></td>
                           <td><form action="/editcustomer/<%= row.customerid %>" method="get">
                            <button type="submit" class="btn btn-block btn-primary">Edit<i class=" fa fa-edit"></i></button>
                          </form></td>
                           <td><form action="/deletecustomer/<%= row.customerid %>" method="post">
                            <button type="submit" class="btn btn-block btn-primary">Delete<i class=" fa fa-trash"></i></button>
                           </form></td>
                        
                          </tr>
                       
                          <% })} else { %>
                      
                            <%  } %>
                        </tbody>
                      </table>
                    </div>
                   </div>
