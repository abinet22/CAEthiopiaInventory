                <div class="card">
                  <%- include ('./partials/messages') %>
                  
                  <div class="card-body">
                    <h4 class="card-title">Add New Customer</h4>
                    <p class="card-description">
                      Add Customer
                    </p>
                    <form class="forms-sample" action="/addnewcustomer" method="post">
                      <div class="form-group">
                        <label for="exampleInputName1">Customer Name</label>
                        <input type="text" class="form-control" id="customername"  name="customername" placeholder="Customer Name<">
                      </div>
                      <div class="form-group">
                        <label for="exampleInputEmail3">Customer Address</label>
                        <input type="text" class="form-control"  name="customeraddress" id="customeraddress" placeholder="Customer Address">
                      </div>
                      <div class="form-group">
                        <label for="exampleInputPassword4">Phone Number</label>
                        <input type="text" class="form-control" id="customerphone" name="customerphone" placeholder="Phone Number">
                      </div>
                    
                      <div class="form-group">
                        <label for="exampleInputPassword4">Initial Credit</label>
                        <input type="text" class="form-control" id="intialbalance" name="intialbalance" placeholder="Intial Credit">
                      </div>
                    
                      <div class="col-md-6 offset-md-3">
                        <button type="submit" class="btn btn-primary btn-block">Save</button>
                      </div>
                    </form>
                  </div>
                </div>
